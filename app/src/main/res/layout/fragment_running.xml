<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RunningFragment">


    <RadioGroup
        android:id="@+id/radiogroup_running"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/radio_quickStart"
            android:text="@string/running_radio_qs"
            android:textSize="20sp"
            android:checked="true"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/radio_preset"
            android:text="@string/running_radio_pre"
            android:textSize="20sp"/>
    </RadioGroup>





    <TextView
        android:id="@+id/tv_radio_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/running_radio_qs"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/radiogroup_running"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <FrameLayout
        android:id="@+id/frame_running"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_running_start"
        app:layout_constraintTop_toBottomOf="@id/tv_radio_title"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frame_quickstart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">


            <TextView
                android:id="@+id/frame_quickstart_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400"
                android:textSize="80sp"
                app:layout_constraintStart_toStartOf="@id/guideline1_quickstart"

                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/frame_quickstart_meter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/running_meter"
                android:textSize="60sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/frame_quickstart_distance"
                app:layout_constraintStart_toEndOf="@+id/guideline2_quickstart" />

            <TextView
                android:id="@+id/frame_quickstart_numlap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="80sp"

                app:layout_constraintStart_toStartOf="@id/guideline1_quickstart"
                app:layout_constraintTop_toBottomOf="@+id/frame_quickstart_distance" />

            <TextView
                android:id="@+id/frame_quickstart_laps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/running_laps"
                android:textSize="50sp"
                app:layout_constraintBaseline_toBaselineOf="@id/frame_quickstart_numlap"
                app:layout_constraintLeft_toLeftOf="@id/guideline2_quickstart" />

            <TextView
                android:id="@+id/frame_quickstart_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40"
                android:textSize="80sp"
                app:layout_constraintLeft_toLeftOf="@id/guideline1_quickstart"
                app:layout_constraintTop_toBottomOf="@+id/frame_quickstart_numlap" />

            <TextView
                android:id="@+id/frame_quickstart_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/running_sec"
                android:textSize="50sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/frame_quickstart_rest"
                app:layout_constraintLeft_toRightOf="@id/guideline2_quickstart" />

            <TextView
                android:id="@+id/frame_quickstart_between"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/running_rest"
                android:textSize="50sp"
                app:layout_constraintTop_toBottomOf="@id/frame_quickstart_sec"
                app:layout_constraintLeft_toRightOf="@id/guideline2_quickstart" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1_quickstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2_quickstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6" />


        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame_rc_preset"
            android:visibility="invisible">

        </androidx.recyclerview.widget.RecyclerView>


    </FrameLayout>



    <Button
        android:id="@+id/btn_running_start"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="START"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>